@{

    if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
            Layout = "~/Views/Admin/_LayoutUser.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_LayoutUser.cshtml";
        }
    }

    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";

    }

}


